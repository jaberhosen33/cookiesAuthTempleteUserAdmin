<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - RoleBasedProductApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">ProductApp</a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Product/Index">Products</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Product/Create">Add Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/UserList">UserList</a>
                        </li>
                    }


                </ul>

                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-white">Hello, @User.Identity.Name</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">Login</a>
                        </li>

                    }
                </ul>
            </div>
        </div>
    </nav>



    @if (User.IsInRole("Admin"))
    {
        <div class="row">
            <div class="col-md-2  " style="height:800px;  background-color:#f2f4f4 ;">

                <ul class="navbar-nav me-auto ms-5">
                    <li class="nav-item">
                        <a class="nav-link" href="/Product/Index">Products</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Product/Create">Add Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/UserList">UserList</a>
                        </li>
                    }


                </ul>
            </div>
            <div class="col-md-9">
                <div class="container mt-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    }
    <div class="container mt-4">
        @RenderBody()
    </div>  


    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
